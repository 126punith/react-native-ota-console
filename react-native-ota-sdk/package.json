    "ANDROID_SETUP.md",
    "TESTING.md"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react-native",
    "ota",
    "over-the-air",
    "updates",
    "apk",
    "bundle",
    "hot-update",
    "code-push",
    "turbo-modules",
    "new-architecture",
    "firebase",
    "remote-config"
  ],
  "author": "",
